    <script>
        function toggleLike(commentId) {
            const likeIcon = document.getElementById(`likeIcon_${commentId}`);
            const likeCountElement = document.getElementById(`likeCount_${commentId}`);

            // Kiểm tra xem nút like đã được ấn chưa
            const isLiked = likeIcon.classList.contains('liked');

            // Gửi yêu cầu đến server để cập nhật LikeNumber
            fetch(`/Comment/ToggleLike?commentId=${commentId}&isLiked=${isLiked}`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                // Các thông tin khác nếu cần
            })
                .then(response => response.json())
                .then(data => {
                    // Cập nhật số lượt like trên giao diện
                    likeCountElement.textContent = data.likeCount;

                    // Thay đổi màu của icon like
                    if (isLiked) {
                        likeIcon.classList.remove('liked');
                    } else {
                        likeIcon.classList.add('liked');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                });
        }
    </script>
}

