        <div id="comments" class="comments-area">
            <h3 class="comments-heading">@Model.Comments.Count() Comments</h3>

            <ul class="comments-list">
                @foreach (var comment in Model.Comments)
                {
                    <li>
                        <div class="comment">
                            <img class="comment-avatar pull-left" alt="" src="@comment.User.Avatar">
                            <div class="comment-body">
                                <div class="meta-data">
                                    <span class="comment-author">@comment.User.Name</span>
                                </div>
                                <div class="comment-content">
                                    <p>@comment.Content</p>
                                </div>
                                <div style="width: 20%">
                                    <img src="@comment.Image" class="d-block w-100" alt="Image">
                                </div>

                                @{
                               
                                    string? acc = Context.Session.GetString("User");
                                    <div class="text-left">
                                        @if (!string.IsNullOrEmpty(Context.Session.GetString("User")))
                                        {
                                            <div style="display: flex; align-items: center;">
                                                <div>
                                                    <a style="color: #da0f32" class="comment-reply" onclick="toggleReplyForm('replyForm_@comment.Id')">Reply</a>
                                                </div>
                                                <div style="margin-left: 10px;">
                                                    <a style="color: #da0f32" class="comment-reply">Report</a>
                                                </div>
                                            </div>
                                        }
                                        else
                                        {
                                            <div>
                                                <a style="color: #da0f32" class="comment-reply">Report</a>
                                            </div>
                                        }
                                    </div>
                                }
     
                                   
                            

                                <!-- Reply Form -->
                                <div id="replyForm_@comment.Id" style="display: none;">
                                    <form id="form_@comment.Id" asp-controller="Comment" asp-action="Index" method="post">
                                        <input type="hidden" name="commentId" value="@comment.Id" />
                                        <input type="hidden" name="locationId" value="@Model.Location.Id" />
                                        <textarea style="margin-bottom: -13px; width: 40%;" name="replyContent" class="reply-textarea" id="replyContent_@comment.Id" placeholder="Write your reply here" required></textarea>
                                        <button style="    background: #da0f32;
                                     border: 2px solid transparent;
                                     color: white;
                                     border-radius: 7px;
                                  }" type="submit" class="reply-submit-btn">
                                            send
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div><!-- Comment end -->
                        @if (comment.Replies.Any())
                        {
                            <ul class="comments-reply">
                                @foreach (var reply in comment.Replies)
                                {
                                    <li>
                                        <div class="comment">
                                            <img class="comment-avatar pull-left" alt="" src="@reply.User.Avatar">
                                            <div class="comment-body">
                                                <div class="meta-data">
                                                    <span class="comment-author">@reply.User.Name</span>
                                                </div>
                                                <div class="comment-content">
                                                    <p>@reply.Content</p>
                                                </div>
                                                @{
                                                    string? check = Context.Session.GetString("User");
                                                    if (check != null)
                                                    {
                                                        <div class="text-left">
                                                            <a style="color:#da0f32" class="comment-reply" onclick="toggleReplyForm('replyForm_@reply.Id')">Reply</a>
                                                        </div>
                                                    }
                                                }
                                                <!-- Reply Form -->
                                                <div id="replyForm_@reply.Id" style="display: none;">
                                                    <form id="form_@comment.Id" asp-controller="Comment" asp-action="Index" method="post">
                                                        <input type="hidden" name="commentId" value="@comment.Id" />
                                                        <input type="hidden" name="locationId" value="@Model.Location.Id" />
                                                        <textarea style="margin-bottom: -13px; width: 40%;" name="replyContent" class="reply-textarea" id="replyContent_@comment.Id" placeholder="Write your reply here" required></textarea>
                                                        <button style="    background: #da0f32;
                                                 border: 2px solid transparent;
                                                 color: white;
                                                  border-radius: 7px;
                                                  }" type="submit" class="reply-submit-btn">
                                                            send
                                                        </button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div><!-- Comment end -->
                                    </li>
                                }
                            </ul>
                            <!-- Comments-reply end -->
                        }
                    </li>
                    <!-- Comments-list li end -->
                }
            </ul><!-- Comments-list ul end -->
        </div><!-- Post comment end -->

        <script>
            function toggleReplyForm(formId) {
                var form = document.getElementById(formId);
                form.style.display = form.style.display === "none" ? "block" : "none";
            }

            function submitReply(commentId) {
                var replyContent = document.getElementById("replyContent_" + commentId).value;
                document.getElementById("form_" + commentId).reset();
                var form = document.getElementById("replyForm_" + commentId);
                form.style.display = "none";
            }
        </script>

        @{

            string? accJson = Context.Session.GetString("User");
            if (accJson != null)
            {
                User? acc = JsonConvert.DeserializeObject<User>(accJson);
                <div class="comments-form border-box">
                    <h3 class="title-normal">Add a comment</h3>

                    <form id="commentForm" role="form" asp-controller="Comment" asp-action="Comment" method="post" enctype="multipart/form-data">
                        <input type="hidden" name="locationId" value="@Model.Location.Id" />
                        <input type="hidden" name="userId" value="@acc.Id" />

                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <textarea name="commentContent" style="height: 12rem;" class="form-control required-field" id="message" placeholder="Your Comment" rows="10" required></textarea>
                                </div>
                                <div class="form-group">
                                    <input type="file" id="imageInput" name="image" onchange="previewImage(event)" />
                                    <img id="imagePreview" src="#" alt="Your image" style="display: none; max-width: 165px; max-height: 100px;" />
                                </div>
                            </div><!-- Col 12 end -->
                        </div><!-- Form row end -->

                        <div class="clearfix">
                            <button class="btn btn-primary" type="submit">Post Comment</button>
                        </div>
                    </form><!-- Form end -->
                </div>


                <script>
                    function previewImage(event) {
                        var image = document.getElementById('imagePreview');
                        image.style.display = 'block';
                        image.src = URL.createObjectURL(event.target.files[0]);
                    }
                </script>
            }
            else
            {
                <form role="form" asp-controller="Login" asp-action="Login" method="get">
                    <div class="clearfix">
                        <button style=" width: 50%;
                            height: 56px;
                            margin-left: 17rem;
                            border-radius: 13px;
                            font-size: 18px;" class="btn btn-primary" type="submit">
                            Please Login To Comment
                        </button>
                    </div>
                </form>

                <!-- Form end -->
            }
        }

    </div>
    <!-- main container end -->
</section>


